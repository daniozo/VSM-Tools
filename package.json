{
  "name": "vsm-tools",
  "version": "1.0.0",
  "description": "VSM-Tools est une application de cartographie des flux de valeur (Value Stream Mapping) destinée aux professionnels de l'amélioration continue et du lean management. L'outil offre une interface graphique intuitive pour dessiner des diagrammes VSM complets avec différents types de flux et permet d'analyser les données associées pour faciliter la prise de décision dans les démarches d'amélioration continue.",
  "main": "electron/build/main.js",
  "scripts": {
    "start": "npm run dev:web-only",
    "dev": "cross-env ELECTRON_BUILD=true vite",
    "build": "tsc && cross-env ELECTRON_BUILD=true vite build",
    "electron:dev": "concurrently \"cross-env ELECTRON_BUILD=true npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:web-only": "vite"
  },
  "author": "daniozo",
  "dependencies": {
    "axios": "^1.8.4",
    "chart.js": "^4.4.9",
    "date-fns": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "immer": "^10.1.1",
    "konva": "^9.3.20",
    "lucide-react": "^0.503.0",
    "pino": "^9.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^5.0.0",
    "react-konva": "^19.0.3",
    "react-virtualized": "^9.22.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.3",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.2.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "msw": "^2.7.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^3.1.2",
    "wait-on": "^8.0.3"
  }
}
